<p id="notice"><%= notice %></p>

<h1>Moedas</h1>
<h2><%= cookies[:curso] %></h2>
<h2><%= session[:curso] %></h2>
<table>
  <thead>
  <tr>
    <th><%= @coins.human_attribute_name :description%></th>
    <th><%= @coins.human_attribute_name :acronym %></th>
    <th><%= @coins.human_attribute_name :url_image %></th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
      <% @coins.each do |coin| %>
        <tr>
          <td><%= coin.description %></td>
          <td><%= coin.acronym %></td>
          <td>
            <%= image_tag coin.url_image, width:25, height:25 %>
          </td>
          <td><%= link_to t('links.show'), coin %></td>
        </tr>
      <% end %>
  </tbody>
</table>

<%= link_to "New coin", new_coin_path %>
