<p id="notice"><%= notice %></p>

<h1>Moedas</h1>

<table>
  <thead>
  <tr>
    <th>Descrição</th>
    <th>Sigla</th>
    <th>Imagem</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
      <% @coins.each do |coin| %>
        <tr>
          <td><%= coin.description %></td>
          <td><%= coin.acronym %></td>
          <td>
            <%= image_tag coin.url_image, width:25, height:25 %>
          </td>
          <td><%= link_to 'Exibir', coin %></td>
        </tr>
      <% end %>
  </tbody>
</table>

<%= link_to "New coin", new_coin_path %>
